<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorTeal</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/hintColor</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/colorTeal</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/colorTeal</item>
    </style>

    <style name="CustomCentered">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="EditTextTheme" parent="CustomCentered">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ButtonTheme" parent="CustomCentered">
        <item name="android:background">@color/twentyTransparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
